                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <TextField fx:id="ID_Servicio" editable="false" layoutX="129.0" layoutY="63.0" prefHeight="25.0" prefWidth="96.0" />
                        <Label layoutX="62.0" layoutY="110.0" text="ID_Taller:">
                            <font>
                                <Font size="14.0" />
